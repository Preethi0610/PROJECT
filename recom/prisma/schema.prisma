generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model users {
  id       Int     @id(map: "PK__users__3213E83F1BF5AA90") @default(autoincrement())
  name     String? @db.VarChar(Max)
  email    String? @db.VarChar(Max)
  password String? @db.VarChar(Max)
}

model User_interactions {
  interactionId  Int      @id @default(autoincrement())
  userId         Int
  movieId        Int
  interactionType String   @db.VarChar(50)
  timestamp      DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  movie  Movie @relation(fields: [movieId], references: [movie_id])
}

model moviess {
  movie_id    Int      @id @default(autoincrement()) @map("movie_id")
  title       String
  genre       String
  image       String
  description String
  release_year Int
}